<%= form_for([@article, @article.comments.build]) do |f| %>
<form>
 <p>
  <%= f.label :commenter %><br>
  <%= f.text_field :commenter, class: "form-control" %>
</p>
<p>
  <%= f.label :body %><br>
  <%= f.text_area :body, class: "form-control" %>
</p>
  <%= f.submit class: "btn btn-primary" %>
  
</form>
<% end %>